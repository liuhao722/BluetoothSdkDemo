<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#50f0"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="24dp"
        android:text="开始扫描蓝牙设备"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_result_list"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:textSize="8sp"
        android:visibility="gone"
        tools:text="搜索到的蓝牙列表"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_conn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:text="连接蓝牙"
        android:textSize="12sp"
        tools:text="连接蓝牙\n(连接最近扫描到的一个符合条件的)" />

    <Button
        android:id="@+id/btn_dis_conn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:text="断开蓝牙"
        android:textSize="12sp"
        tools:text="断开蓝牙\n(断开最近扫描到的一个符合条件的)" />

    <EditText
        android:id="@+id/et_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:hint="输入要闪烁的次数"
        android:inputType="number"
        android:visibility="gone"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/et_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:hint="输入要闪烁的时间间隔,毫秒级"
        android:inputType="number"
        android:visibility="gone"
        tools:visibility="visible" />


    <Button
        android:id="@+id/btn_control_led"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:text="控制led灯闪烁\n发送指令"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/et_wifi_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="24dp"
        android:hint="输入当前连接wifi的密码,然后进行广播" />

    <Button
        android:id="@+id/btn_wifi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:text="广播wifi 连接到基站"
        android:textSize="10sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_wifi_info"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        android:textSize="8sp"
        tools:text="当前蓝牙信息" />


</LinearLayout>
